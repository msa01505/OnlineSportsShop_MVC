@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    var Cloth = ViewBag.Cloth;
    var srcImg = "~/images/Clothes/" + Cloth.Source;
    var OldPrice = Cloth.Price + (Cloth.Price * 40 / 100);
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/ClothesDetails.css" rel="stylesheet" />

<div style="text-align:center" class="alert-dark"><a asp-action="Index"><h1>Clothes</h1></a></div>
>
<div class="card">
    <div class="row">
        <div class="col-md-6">
            <div class="images p-3">
                <div class="container mt-5 mb-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-10">
                            <div class="text-center p-4"> <img asp-append-version="true" id="main-image" src=@srcImg width="250" /> </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <a asp-action="Index" class="ml-1">Back</a> </div> <i class="fa fa-shopping-cart text-muted"></i>
                            </div>
                            <div class="mt-4 mb-3">
                                <span class="text-uppercase text-muted brand">@Cloth.Brand</span>
                                <h5 class="text-uppercase">@Cloth.Name</h5>
                                <span>@Cloth.Color /</span>

                                <span>@Cloth.Gender</span>
                                <div class="price d-flex flex-row align-items-center">
                                    <span class="act-price">$@Cloth.Price</span>
                                    <div class="ml-2"> <small class="dis-price">$@OldPrice</small> <span>40% OFF</span> </div>
                                </div>
                            </div>
                            <p class="about">@Cloth.Discrbtion</p>
                            <div class="sizes mt-5">
                                <h6 class="text-uppercase">Size</h6>

                                <label class="radio">
                                </label> <label class="radio"> <input type="radio" name="size" value="M"> <span>M</span> </label> <label class="radio"> <input type="radio" name="size" value="L"> <span>L</span> </label> <label class="radio"> <input type="radio" name="size" value="XL"> <span>XL</span> </label> <label class="radio"> <input type="radio" name="size" value="XXL"> <span>XXL</span> </label>
                            </div>
                            <div class="cart mt-4 align-items-center">
                                <a asp-action="AddToCart" asp-route-id="@Cloth.ID"  class="btn btn-danger text-uppercase mr-2 px-4">Add to cart</a>
                                <i class="fa fa-heart text-muted"></i>
                                <i class="fa fa-share-alt text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>