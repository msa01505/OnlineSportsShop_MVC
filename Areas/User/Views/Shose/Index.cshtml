@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    List<Proj.Models.Product> shoses = ViewBag.shoseProductList;


}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/productCard.css" rel="stylesheet" />

<div style="text-align:center" class="alert-dark"><a asp-action="Index"><h1>Shoes</h1></a></div>

<div class="container d-flex justify-content-center mt-50 mb-50">
    @using (Html.BeginForm("index", "Shose", FormMethod.Post))
    {
        <div class="form-actions no-color d-inline-block">
            <p>
                <i class="fas fa-search"></i>
                find by color <input class="bi bi-search form-control" type="text" name="color" value="@ViewData["ColorFilter"]" placeholder="Seach.." />
            </p>
        </div>
        <div class="form-actions no-color d-inline-block">
            <p>
                <i class="fas fa-search"></i>
                find by gender<input class="form-control" type="text" name="gender" value="@ViewData["GenderFilter"]" placeholder="Seach.." />
            </p>
        </div>
        <div style="text-align:center">
            <input type="submit" value="search" class="btn btn-primary" />
        </div>
    }
</div>




@if (shoses.Count() < 4 && shoses.Count() != 0)
{
    <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">
            @foreach (var shose in shoses)
            {
                var srcImg = "~/images/Shoes/" + @shose.Source;

                <div class="col-6 mt-2">
                    <div class="card">
                        <div class="card-body">

                            <a asp-area="User" asp-controller="Shose" asp-action="getShoseProduct" asp-route-id="@shose.ID">
                                <div class="card-img-actions">
                                    <img asp-append-version="true" src=@srcImg class="card-img img-fluid" width="96" height="250" alt="" />
                                </div>
                            </a>
                        </div>
                        <div class="card-body bg-light text-center">
                            <div class="mb-2">
                                <h6 class="font-weight-semibold mb-2">
                                    <a href="#" class="text-default mb-2" data-abc="true">
                                        @shose.Name
                                    </a>
                                </h6>
                                <a href="#" class="text-muted" data-abc="true">@shose.Brand</a>
                            </div>
                            <h3 class="mb-0 font-weight-semibold">$@shose.Price</h3>
                            <div> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> </div>
                            <div class="text-muted mb-3">34 reviews</div>
                            <a asp-action="AddToCart" asp-route-id="@shose.ID" class="btn bg-cart">Add to cart</a>
                        </div>
                    </div>
                </div>


            }

        </div>



    </div>
}
else if (shoses.Count() == 0)
{
    <a asp-area="" asp-controller="Home" asp-action="Index">
        <center>
            <img class="img-fluid" src="~/images/no-products-found.png" />
        </center>
    </a>


}
else
{
    <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">
            @foreach (var shose in shoses)
            {
                var srcImg = "~/images/Shoes/" + @shose.Source;

                <div class="col-4 mt-2">
                    <div class="card">
                        <div class="card-body">

                            <a asp-area="User" asp-controller="Shose" asp-action="getShoseProduct" asp-route-id="@shose.ID">
                                <div class="card-img-actions">
                                    <img asp-append-version="true" src=@srcImg class="card-img img-fluid" width="96" height="250" alt="" />
                                </div>
                            </a>
                        </div>
                        <div class="card-body bg-light text-center">
                            <div class="mb-2">
                                <h6 class="font-weight-semibold mb-2">
                                    <a href="#" class="text-default mb-2" data-abc="true">
                                        @shose.Name
                                    </a>
                                </h6>
                                <a href="#" class="text-muted" data-abc="true">@shose.Brand</a>
                            </div>
                            <h3 class="mb-0 font-weight-semibold">$@shose.Price</h3>
                            <div> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> </div>
                            <div class="text-muted mb-3">34 reviews</div>
                            <a asp-action="AddToCart" asp-route-id="@shose.ID" class="btn bg-cart">Add to cart</a>
                        </div>
                    </div>
                </div>


            }

        </div>



    </div>
}
