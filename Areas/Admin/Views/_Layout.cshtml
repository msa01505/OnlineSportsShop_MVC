            <a href="https://www.facebook.com">  <img src="~/images/facebook.svg" asp-append-version="true" width="50" ></a>
            <a href="https://www.twitter.com">  <img src="~/images/twitter.svg" asp-append-version="true" width="50" class=" p-1"></a>
            <a href="https://www..com">  <img src="~/images/instagram.svg" asp-append-version="true" width="50" ></a>

        </div>
        <div class=" text-center text-sm text-secondary">
            <small> &copy;copywrite All rights resrved <a asp-area="" asp-page="/Home">Home</a></small>
        </div>*@
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
