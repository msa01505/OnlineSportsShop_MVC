@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    var Watch = ViewBag.Watch;
    var srcImg = "~/images/SmartWatches/" + Watch.Source;
    var OldPrice = Watch.Price + (Watch.Price * 25 / 100);
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/WatchesDetails.css" rel="stylesheet" />

<div style="text-align:center" class="alert-dark"><a asp-action="Index"><h1>Smart-Watches</h1></a></div>

<div class="wrapper">
    <div class="card">
        <span class="off bg-dark">-25% OFF</span>
        <div style="text-align:center;"> <img asp-append-version="true" id="main-image" src=@srcImg width="200" height="200"/> </div>
        <div class="about text-center">
            <h5>@Watch.Discrbtion</h5>
            <h6>@Watch.Name/@Watch.Brand</h6>
            <div style="text-align:center;" class="price">
                <span class="act-price">$@Watch.Price</span>
                <div class="ml-2"> <small class="dis-price">$@OldPrice</small></div>
            </div>
            <div>@Watch.Color</div>
        </div>
        <div class="cart-button mt-3 px-2 d-flex justify-content-between align-items-center">
            <a  asp-action="AddToCart" asp-route-id="@Watch.ID" class="btn btn-dark text-uppercase">Add to cart</a>
            <div class="add"> <span class="product_fav"><i class="fa fa-heart-o"></i></span> <span class="product_fav"><i class="fa fa-opencart"></i></span> </div>
        </div>
    </div>
</div>





